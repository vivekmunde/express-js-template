type TDocumentStatusHistory {
  statusId  String   @db.ObjectId
  updatedAt DateTime
  updatedBy String   @db.ObjectId
}

model Document {
  id             String                   @id @default(auto()) @map("_id") @db.ObjectId
  number         String                   @unique
  organizationId String                   @db.ObjectId
  projectId      String                   @db.ObjectId
  typeId         String                   @db.ObjectId
  title          String
  statusId       String                   @db.ObjectId
  statusHistory  TDocumentStatusHistory[]
  sectionIds     String[]                 @db.ObjectId
  subDocumentIds String[]                 @db.ObjectId
  commentIds     String[]                 @db.ObjectId
  timeSpent      Int
  startDate      DateTime?
  endDate        DateTime?
  assigneeId     String                   @db.ObjectId
  createdAt      DateTime                 @default(now())
  createdBy      String                   @db.ObjectId
  updatedAt      DateTime?
  updatedBy      String?                  @db.ObjectId
}

model DocumentChangeLog {
  id             String                   @id @default(auto()) @map("_id") @db.ObjectId
  documentId     String                   @db.ObjectId
  number         String?                  @unique
  organizationId String?                  @db.ObjectId
  projectId      String?                  @db.ObjectId
  typeId         String?                  @db.ObjectId
  title          String?
  statusId       String?                  @db.ObjectId
  statusHistory  TDocumentStatusHistory[]
  sectionIds     String[]                 @db.ObjectId
  subDocumentIds String[]                 @db.ObjectId
  commentIds     String[]                 @db.ObjectId
  timeSpent      Int?
  startDate      DateTime?
  endDate        DateTime?
  assigneeId     String?                  @db.ObjectId
  createdAt      DateTime?
  createdBy      String?                  @db.ObjectId
  updatedAt      DateTime?
  updatedBy      String?                  @db.ObjectId
  archivedAt     DateTime?
  archivedBy     String?                  @db.ObjectId
}
