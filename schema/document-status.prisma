type TDocumentStatusColors {
  background String
  foreground String
}

type TDocumentStatusColor {
  light TDocumentStatusColors
  dark  TDocumentStatusColors
}

model DocumentStatus {
  id             String                @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String                @db.ObjectId
  name           String
  description    String?
  color          TDocumentStatusColor?
  disabled       Boolean               @default(false)
  createdAt      DateTime              @default(now())
  createdBy      String                @db.ObjectId
  updatedAt      DateTime?
  updatedBy      String?               @db.ObjectId
}

model DocumentStatusChangeLog {
  id               String                @id @default(auto()) @map("_id") @db.ObjectId
  documentStatusId String                @db.ObjectId
  organizationId   String?               @db.ObjectId
  name             String?
  description      String?
  color            TDocumentStatusColor?
  disabled         Boolean               @default(false)
  createdAt        DateTime?
  createdBy        String?               @db.ObjectId
  updatedAt        DateTime?
  updatedBy        String?               @db.ObjectId
  archivedAt       DateTime?
  archivedBy       String?               @db.ObjectId
}
